{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./dist/cm",
    "sourceMap": true,
    "experimentalDecorators": true,
    //"importHelpers": true,
    "noStrictGenericChecks": true,
    "lib": ["dom", "es5", "es2015.core", "es2015.promise", "es2015.iterable", "es2015.generator"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
